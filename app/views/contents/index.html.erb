<%= render :partial => 'admin/navigation' %>
<% @page_title = "Admin - Contents" %>
<table>
  <tr>
  	<th style="width:140px;">Controller</th>
	<th style="width:140px;">Action</th>
	<th style="width:140px;">Name</th>
    <th>Location</th>
	<th>Pseudonym</th>
  </tr>

<% for content in @contents %> 
  <tr style="border-top:1px solid #eee;background:<%= cycle('#f3f3f3','#fff') %>;">
  	<td style="width:140px;"><%=h content.controller %></td>
	<td style="width:140px;"><%=h content.action %></td>
    <td style="width:140px;"><%=h content.name %></td>
	<td style="width:300px;"><%= link_to content.location, content.location %></td>
	<td style="width:140px;"><%=h content.pseudonym %></td>
    <td><%= link_to 'View', content %></td>
    <td><%= link_to 'Edit', edit_content_path(content) %></td>
    <td><%= link_to 'Destroy', content, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

