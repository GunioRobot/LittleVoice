<% @color_array.each do |color_value| %>
<% @button_size_array.each do |size_value| %>

a.button_<%= color_value %>_<%= size_value %>{
	background:url(/images/buttons/button_<%= size_value %>_light<%= color_value %>.gif);
	background-repeat: no-repeat;
	color: <%= @color_hash["dark_#{color_value}"] %>;	
	width:<%= size_value %>px;
}

a:hover.button_<%= color_value %>_<%= size_value %>{
	background:url(/images/buttons/button_<%= size_value %>_dark<%= color_value %>.gif);	
	background-repeat: no-repeat;
	color: <%= @color_hash["light_#{color_value}"] %>;
}

<% end %>
<% end %>



